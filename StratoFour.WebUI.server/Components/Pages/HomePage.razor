@page "/"
@rendermode InteractiveServer
@using Microsoft.AspNetCore.WebUtilities
@using StratoFour.Domain
@using StratoFour.Application.Helpers
@inject NavigationManager NavManager
@inject BackGroundWorkerService WorkerService

<h3>HomePage</h3>

<div class="row">
    <div class="col-12">
        <h2 class="fw-bolder">Welcome to <span class="text-danger">StratoFour</span></h2>
    </div>
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <AuthorizeView>
                    <NotAuthorized>
                        <span>You are not logged in. Please <a class="fw-bolder" href="/login">click here</a></span>
                    </NotAuthorized>
                    <Authorized>
                        <span>Logged in as <b>@context.User.Identity.Name</b> <a class="fw-bolder" href="/logout"></a>  </span>
                        <button @onclick="@(async () => await WorkerService.SendPlayerTurnRequestAsync(1, 1))">Verbindungstest Spieler1</button>
                        <button @onclick="@(async () => await WorkerService.SendPlayerTurnRequestAsync(2, 2))">Verbindungstest Spieler2</button>
                        <button @onclick="HandleNewGame">New Game</button>
                    </Authorized>
                </AuthorizeView>
            </div>
        </div>
    </div>

</div>


@code {
    private void HandleNewGame()
    {
        var query = new Dictionary<string, string>
        {
            {"name", "playername" }, {"color", ColorHelper.GetBluePlanetColor()}
        };

        NavManager.NavigateTo(QueryHelpers.AddQueryString("game", query));
    }

}